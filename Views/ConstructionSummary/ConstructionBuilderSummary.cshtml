@model FYP.ViewModels.TestVM

@{
    ViewBag.Title = "ConstructionBuilderSummary";
}

<h2>Construction Builder Summary</h2>

<p>The latest build summary goes to the bottom of the table</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PreConTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StructureCost)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OneQuote.SuperStructCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OneQuote.ExternalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServicesCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th></th>
    </tr>
   
@foreach (var item in Model.list) {
    <tr>
        <td>
            £@Html.DisplayFor(modelItem => item.PreConTotal)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.StructureCost)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.SuperStructCost)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.ExternalCost)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.ServicesCost)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.Extra)
        </td>
        <td>
            £@Html.DisplayFor(modelItem => item.TotalCost)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
